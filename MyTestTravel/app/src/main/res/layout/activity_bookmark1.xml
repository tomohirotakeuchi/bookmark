<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Bookmark1Activity">
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/bm1GuideText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/bm1BackToMain" android:layout_marginRight="8dp"
            android:textSize="30sp" android:background="@color/light_blue" tools:text="Title"
            android:singleLine="true" android:ellipsize="marquee"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/bm1RecyclerView"
            tools:listitem="@layout/bm1_recycler_list_item"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/bm1ad"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bm1BackToMain" app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toTopOf="@+id/bm1GuideText"
            app:layout_constraintBottom_toBottomOf="@+id/bm1GuideText" android:text="@string/Back"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bm1ad" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:gravity="center_horizontal"
            android:background="@color/colorAccent"
            android:text="@string/ad" app:layout_constraintTop_toBottomOf="@+id/bm1GuideText"
            android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
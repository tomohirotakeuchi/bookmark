<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bm2Spinner" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bm2BackToBm1Btn"
            android:splitMotionEvents="true" tools:listitem="@layout/bm2_spinner" android:dropDownWidth="wrap_content"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:background="#5B7678FD" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bm2BackToBm1Btn" app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toTopOf="@+id/bm2Spinner"
            app:layout_constraintBottom_toBottomOf="@+id/bm2Spinner"/>
    <android.support.v4.view.ViewPager
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/bm2Spinner" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bm2TabLayout" android:id="@+id/bm2ViewPager"/>
    <android.support.design.widget.TabLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/bm2TabLayout" app:tabIndicatorFullWidth="true">

        <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="place" android:icon="@drawable/ic_flag_black_24dp"/>

        <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Times" android:icon="@drawable/ic_schedule_black_24dp"/>

        <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Image" android:icon="@drawable/ic_image_black_24dp"/>
        <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:text="Map"
                android:icon="@drawable/ic_map_black_24dp"/>
    </android.support.design.widget.TabLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow_drop_down_black_40dp"
            android:id="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="@+id/bm2Spinner"
            app:layout_constraintTop_toTopOf="@+id/bm2Spinner"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="@+id/bm2Spinner"
    />
</android.support.constraint.ConstraintLayout>
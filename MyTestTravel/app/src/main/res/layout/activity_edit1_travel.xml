<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditMainActivity">

    <TextView
            android:text="・タイトル"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit1TravelTitleText"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible" tools:visibility="visible" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit1TravelTitle" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edit1TravelTitleText" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:hint="旅行のタイトルは？" android:visibility="visible" tools:visibility="visible"/>
    <TextView
            android:text="・出発日と到着日は？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit1DepartureDayText"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/edit1TravelTitle"
            android:visibility="visible" tools:visibility="visible"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit1TravelDays"
            android:textColor="@android:color/black"
            android:background="@android:color/background_light"
            android:textSize="18sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center_horizontal|center_vertical" android:text="日付を選択してください。"
            app:layout_constraintTop_toBottomOf="@+id/edit1DepartureDayText" android:layout_marginTop="8dp"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:visibility="visible" tools:visibility="visible"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/edit1DepartureDay"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:background="@color/timeBackGround" android:hint="出発日選択"
            android:gravity="center_horizontal|center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/edit1TravelDays" android:layout_marginTop="8dp"
            android:visibility="visible" tools:visibility="visible" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp" app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
            android:id="@+id/edit1TravelArrow"
            app:layout_constraintBottom_toBottomOf="@+id/edit1DepartureDay"
            app:layout_constraintTop_toTopOf="@+id/edit1DepartureDay"
            app:layout_constraintStart_toEndOf="@+id/edit1DepartureDay" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/edit1ArrivalDay"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:background="@color/timeBackGround" android:hint="到着日選択"
            android:gravity="center_horizontal|center_vertical"
            app:layout_constraintBottom_toBottomOf="@+id/edit1TravelArrow"
            android:visibility="visible" tools:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/edit1TravelArrow" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/edit1TravelArrow"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit1DepartureText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:text="・出発地点は？" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:visibility="visible" tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/edit1DepartureDay" android:layout_marginTop="32dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit1DeparturePlace" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit1DepartureText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:hint="出発地点"
            android:text="現在地" android:visibility="visible" tools:visibility="visible"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit1ArrivalText"
            app:layout_constraintStart_toStartOf="parent"
            android:text="・到着地点は？" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:visibility="visible" tools:visibility="visible"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/edit1DeparturePlace"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit1ArrivalPlace"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:hint="到着地点"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edit1ArrivalText"
            android:text="現在地" android:visibility="visible" tools:visibility="visible"/>
    <Button
            android:text="更新"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit1ApplyButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            app:layout_constraintTop_toTopOf="@+id/edit1BackToMain"
            app:layout_constraintBottom_toBottomOf="@+id/edit1BackToMain"/>
    <Button
            android:text="戻る"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit1BackToMain" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/edit1ArrivalPlace"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/img_main"
            android:id="@+id/mainBackGround"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/none" android:scaleType="centerCrop"
            android:background="?android:attr/selectableItemBackground"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainTotalCost"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="0"
            app:layout_constraintTop_toBottomOf="@+id/mainArrivalDayTime"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/mainArrivalDayTime" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainTitle" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="36sp" android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" tools:text="- タイ旅行 -"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainDepartureText"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mainTitle" android:layout_marginTop="16dp"
            android:text="@string/mainDepartureText" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainArrivalTimeText"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toBottomOf="@+id/mainDepartureText"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:text="@string/mainArrivalTimeText"
            android:layout_marginTop="8dp" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainDepartureDayTime"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toEndOf="@+id/mainDepartureText"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/mainDepartureText"
            app:layout_constraintBottom_toBottomOf="@+id/mainDepartureText"
            android:layout_marginBottom="8dp" tools:text="2019/05/10  09:30" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainArrivalDayTime"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="@+id/mainDepartureDayTime"
            app:layout_constraintEnd_toEndOf="@+id/mainDepartureDayTime"
            tools:text="2019/05/10  09:30"
            app:layout_constraintTop_toBottomOf="@+id/mainDepartureDayTime" android:layout_marginTop="8dp"
            android:textStyle="bold"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_edit_black_40dp"
            android:id="@+id/mainEdit"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/mainDelete" android:contentDescription="@string/edit"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_delete_forever_black_40dp"
            android:id="@+id/mainDelete" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/delete"/>
    <TextView
            android:text="@string/mainTotalCostText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainTotalCostText"
            app:layout_constraintTop_toBottomOf="@+id/mainArrivalTimeText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp" android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>
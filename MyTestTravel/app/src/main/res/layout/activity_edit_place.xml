<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditPlaceActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="193dp"
            tools:layout_editor_absoluteX="39dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Day 1 destination"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/placeEditGuide" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="30sp"
                    app:layout_constraintEnd_toStartOf="@+id/placeEditBack" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" android:layout_marginTop="8dp"/>
            <Button
                    android:text="back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/placeEditBack" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="・One Point Memos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/placeEditMemosText"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:background="@color/light_blue"
                    android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/placeEditGuide"
                    android:layout_marginTop="8dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/placeEditMemo1" android:layout_marginStart="32dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
                    android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="32dp" app:layout_constraintTop_toBottomOf="@+id/placeEditMemosText"
                    android:layout_marginTop="8dp" android:textSize="18sp" android:hint="memo1"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/placeEditMemo2" android:layout_marginStart="32dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
                    android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="32dp"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/placeEditMemo1"
                    android:hint="memo2"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/placeEditMemo3" android:layout_marginStart="32dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
                    android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="32dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/placeEditMemo2" android:hint="memo3"/>
            <TextView
                    android:text="・URL Links"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/placeEditURLText"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:background="@color/light_blue"
                    android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/placeEditMemo3" android:layout_marginTop="8dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/placeEditURL1" android:layout_marginStart="32dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
                    android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="32dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/placeEditURLText" android:layout_marginTop="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" android:hint="URL1"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/placeEditURL2" android:layout_marginStart="32dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
                    android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="32dp"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintTop_toBottomOf="@+id/placeEditURL1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" android:hint="URL2"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/placeEditURL3" android:layout_marginStart="32dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
                    android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="32dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/placeEditURL2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" android:hint="URL3"/>
            <TextView
                    android:text="・Budget"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/placeEditBudgetText"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:background="@color/light_blue"
                    android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/placeEditURL3" android:layout_marginTop="8dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/placeLayoutCenter" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/placeEditBudgetText"/>
            <TextView
                    android:text=" Transportation :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/placeEditTransportationText"
                    android:layout_gravity="center"
                    android:layout_weight="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintTop_toBottomOf="@+id/placeEditBudgetText" android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/placeLayoutCenter"/>
            <TextView
                    android:text=" Foods :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/placeEditFoodText"
                    android:layout_gravity="center"
                    android:layout_weight="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintTop_toBottomOf="@+id/placeEditTransportationText"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="@+id/placeEditTransportationText"
                    app:layout_constraintEnd_toEndOf="@+id/placeEditTransportationText"/>
            <TextView
                    android:text=" Souvenirs :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/placeEditSouvenirText"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintTop_toBottomOf="@+id/placeEditAddmissionText"
                    android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="@+id/placeEditAddmissionText"
                    app:layout_constraintEnd_toEndOf="@+id/placeEditAddmissionText"/>
            <TextView
                    android:text=" Etc :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/placeEditEtcText"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintTop_toBottomOf="@+id/placeEditSouvenirText"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="@+id/placeEditSouvenirText"
                    app:layout_constraintStart_toStartOf="@+id/placeEditSouvenirText"/>
            <TextView
                    android:text=" Addmission fee :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/placeEditAddmissionText"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintTop_toBottomOf="@+id/placeEditFoodText" android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="@+id/placeEditFoodText"
                    app:layout_constraintEnd_toEndOf="@+id/placeEditFoodText"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/placeEditCost1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintTop_toTopOf="@+id/placeEditTransportationText"
                    app:layout_constraintBottom_toBottomOf="@+id/placeEditTransportationText"
                    app:layout_constraintStart_toEndOf="@+id/placeLayoutCenter"
                    android:hint="cost" android:gravity="center" android:inputType="number"
                    android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="32dp" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/placeEditCost2" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintTop_toTopOf="@+id/placeEditFoodText"
                    app:layout_constraintBottom_toBottomOf="@+id/placeEditFoodText"
                    app:layout_constraintStart_toStartOf="@+id/placeEditCost1"
                    android:gravity="center" android:hint="cost"
                    app:layout_constraintEnd_toEndOf="@+id/placeEditCost1"
            />
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/placeEditCost3" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintTop_toTopOf="@+id/placeEditAddmissionText"
                    app:layout_constraintBottom_toBottomOf="@+id/placeEditAddmissionText"
                    app:layout_constraintStart_toStartOf="@+id/placeEditCost2"
                    android:gravity="center" android:hint="cost"
                    app:layout_constraintEnd_toEndOf="@+id/placeEditCost2"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/placeEditCost4" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintTop_toTopOf="@+id/placeEditSouvenirText"
                    app:layout_constraintBottom_toBottomOf="@+id/placeEditSouvenirText"
                    app:layout_constraintStart_toStartOf="@+id/placeEditCost3"
                    android:hint="cost" android:gravity="center"
                    app:layout_constraintEnd_toEndOf="@+id/placeEditCost3"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/placeEditCost5" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintTop_toTopOf="@+id/placeEditEtcText"
                    app:layout_constraintBottom_toBottomOf="@+id/placeEditEtcText"
                    app:layout_constraintStart_toStartOf="@+id/placeEditCost4"
                    android:hint="cost" android:gravity="center"
                    app:layout_constraintEnd_toEndOf="@+id/placeEditCost4"/>
            <Button
                    android:text="Update"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/placeEditUpdate" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/placeEditCost5" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="total:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/placeEditTotalText"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    app:layout_constraintTop_toTopOf="@+id/placeEditBudgetText"
                    app:layout_constraintBottom_toBottomOf="@+id/placeEditBudgetText"
                    app:layout_constraintEnd_toStartOf="@+id/placeEditTotal" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"/>
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/placeEditTotal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    app:layout_constraintTop_toTopOf="@+id/placeEditBudgetText"
                    app:layout_constraintBottom_toBottomOf="@+id/placeEditBudgetText"
                    app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="@+id/placeEditBudgetText"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
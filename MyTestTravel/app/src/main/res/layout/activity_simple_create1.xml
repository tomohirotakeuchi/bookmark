<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SimpleCreate1Activity">
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"
            android:id="@+id/scrollView">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/arrivalDay"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:background="@color/colorAccent" android:hint="到着日選択"
                    android:gravity="center_horizontal|center_vertical"
                    app:layout_constraintBottom_toBottomOf="@+id/departureDay"
                    app:layout_constraintTop_toTopOf="@+id/departureDay" app:layout_constraintVertical_bias="0.0"
                    android:visibility="visible" tools:visibility="visible"
                    app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"/>
            <TextView
                    android:text="以下の項目を入力してください。"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/simpleCreate1Guide"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:visibility="visible"
                    tools:visibility="visible" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="・タイトル"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/titleText"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/simpleCreate1Guide" android:layout_marginTop="24dp"
                    android:visibility="visible" tools:visibility="visible"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/inputTitle" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/titleText" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:hint="旅行のタイトルは？" android:visibility="visible" tools:visibility="visible"/>
            <include android:layout_width="0dp" android:layout_height="wrap_content"
                     layout="@layout/sc1_fragment"
                     app:layout_constraintTop_toBottomOf="@+id/departurePlace"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintHorizontal_bias="0.0"
                     app:layout_constraintStart_toStartOf="parent"
                     android:id="@+id/includeSC1Day1"/>
            <include android:layout_width="0dp" android:layout_height="wrap_content"
                     layout="@layout/sc1_fragment"
                     android:id="@+id/includeSC1Day2"
                     app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintHorizontal_bias="0.0"
                     app:layout_constraintTop_toBottomOf="@+id/includeSC1Day1" android:visibility="gone"
                     tools:visibility="visible"/>
            <include android:layout_width="0dp" android:layout_height="wrap_content"
                     layout="@layout/sc1_fragment"
                     android:id="@+id/includeSC1Day3"
                     app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintHorizontal_bias="0.0"
                     app:layout_constraintTop_toBottomOf="@+id/includeSC1Day2" android:visibility="gone"
                     tools:visibility="visible"/>
            <include android:layout_width="0dp" android:layout_height="wrap_content"
                     layout="@layout/sc1_fragment"
                     android:id="@+id/includeSC1Day4"
                     app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintHorizontal_bias="0.0"
                     app:layout_constraintTop_toBottomOf="@+id/includeSC1Day3" android:visibility="gone"
                     tools:visibility="visible"/>
            <include android:layout_width="0dp" android:layout_height="wrap_content"
                     layout="@layout/sc1_fragment"
                     android:id="@+id/includeSC1Day5"
                     app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintHorizontal_bias="0.0"
                     app:layout_constraintTop_toBottomOf="@+id/includeSC1Day4" android:visibility="gone"
                     tools:visibility="visible"/>
            <include android:layout_width="0dp" android:layout_height="wrap_content"
                     layout="@layout/sc1_fragment"
                     android:id="@+id/includeSC1Day6"
                     app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintHorizontal_bias="0.0"
                     app:layout_constraintTop_toBottomOf="@+id/includeSC1Day5" android:visibility="gone"
                     tools:visibility="visible"/>
            <include android:layout_width="0dp" android:layout_height="wrap_content"
                     layout="@layout/sc1_fragment"
                     android:id="@+id/includeSC1Day7"
                     app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintHorizontal_bias="0.0"
                     app:layout_constraintTop_toBottomOf="@+id/includeSC1Day6" android:visibility="gone"
                     tools:visibility="visible"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/departureText"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    android:text="・出発地点は？" android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:visibility="visible" tools:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@+id/departureDay" android:layout_marginTop="32dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/departurePlace" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/departureText" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:hint="出発地点"
                    android:text="現在地" android:visibility="visible" tools:visibility="visible"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/arrivalText"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="・到着地点は？" android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:visibility="visible" tools:visibility="visible"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/includeSC1Day7"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/arrivalPlace"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:hint="到着地点"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/arrivalText"
                    android:text="現在地" android:visibility="visible" tools:visibility="visible"/>
            <Button
                    android:text="戻る"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sc1backToMain"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/arrivalPlace"
                    android:visibility="visible" tools:visibility="visible"
                    android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="18sp"/>
            <Button
                    android:text="次へ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sc1nextToSC2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
                    app:layout_constraintTop_toTopOf="@+id/sc1backToMain"
                    app:layout_constraintBottom_toBottomOf="@+id/sc1backToMain" android:visibility="visible"
                    tools:visibility="visible" app:layout_constraintVertical_bias="0.0"
                    android:layout_marginBottom="32dp" android:textSize="18sp"/>
            <TextView
                    android:text="・出発日と到着日は？"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/departureDayText"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/inputTitle"
                    android:visibility="visible" tools:visibility="visible"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/departureDay"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:background="@color/colorAccent" android:hint="出発日選択"
                    android:gravity="center_horizontal|center_vertical"
                    app:layout_constraintTop_toBottomOf="@+id/travelDays" android:layout_marginTop="8dp"
                    android:visibility="visible" tools:visibility="visible" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/travelDays"
                    android:textColor="@android:color/black"
                    android:background="@android:color/background_light"
                    android:textSize="18sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:gravity="center_horizontal|center_vertical" android:text="日付を選択してください。"
                    app:layout_constraintTop_toBottomOf="@+id/departureDayText" android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:visibility="visible" tools:visibility="visible"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
                    android:id="@+id/imageView"
                    app:layout_constraintTop_toTopOf="@+id/departureDay"
                    app:layout_constraintBottom_toBottomOf="@+id/departureDay"
                    app:layout_constraintStart_toEndOf="@+id/departureDay" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
            />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>